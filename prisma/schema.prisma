// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Produtos {
  id                    Int           @id @default(autoincrement())
  name                  String
  description           String 
  slug                  String
  preco                 Float
  imageUrl              String
  quantidade            Int
  promocao              Boolean
  promocao_preco        Float
  atacado               Boolean
  atacado_minquantidade Int
  vendas                Int
  status                String
}
